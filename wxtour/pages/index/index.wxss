/**index.wxss**/
@import "../../lib/global.wxss";

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 148rpx;
  height: 148rpx;
  border-radius: 50%;
  float:left;
  position:absolute;
  bottom:-60rpx;
  left:60rpx;
  box-shadow:0rpx 4rpx 4rpx 4rpx rgba(0,0,0,0.2);
}

.userinfo-nickname {
  color: #fff;
  float:left;
  font-size:36rpx;
  position:absolute;
  bottom:20rpx;
  left:220rpx;
}

.usermotto {
  margin-top: 200px;
}
.stu{
  width:100%;
  height:160rpx;
  background-color: #512da8;
  box-shadow:0rpx 4rpx 5rpx 5rpx rgba(0,0,0,0.24);
  position: relative;
}
.list{
  width:100%;
  min-height:40rpx;
  /*background-color:aquamarine;*/
  margin-top:24rpx;
}
.list_bill{
  width:98%;
  height:140rpx;
  margin-left:1%;
  background-color: #fff;
  border-bottom: 1rpx solid #dadada;
}
.list_bill_to{
  width:20%;
  height:140rpx;
  float:left;
  background-color: #fff;
  line-height:140rpx;
  text-align: center;
}
.list_bill_time{
  width:60%;
  height:140rpx;
  float:left;
  line-height:70rpx;
  color:#898989;
}
.time_list{
  height:70rpx;
  line-height:60rpx;
  font-size:28rpx;
  text-align: center;
}
.list_bill_price{
  width:20%;
  height:140rpx;
  float:left;
  line-height:140rpx;
  color:#ff4081;
}
.icon_bill{
  width:100rpx;
  height:100rpx;
  background-color:#512da8;
  border-radius: 50rpx;
  position:fixed;
  right:50rpx;
  bottom:80rpx;
  text-align: center;
  line-height:90rpx;
  font-weight: 300;
  font-size:70rpx;
  color:#fff;
  box-shadow: 0rpx 4rpx 5rpx 5rpx rgba(0,0,0,0.24);
}