.ticket{
  width:700rpx;
  margin:auto;
  margin-top:40rpx;
  height:500rpx;
  background-color: #f0f0f0;
  box-shadow: 0rpx 0rpx 5rpx 5rpx rgba(0,0,0,0.2);
  overflow:hidden;
  font-family: "微软雅黑";
}
.ticket_banner{
  width:700rpx;
  height:100rpx;
  background-color:#512da8;
  /*background-image: url(../../image/wh.jpg);
  background-size: cover;*/

}
.ticket_main{
  width:700rpx;
  height:200rpx;
}
.ticket_main_left{
  width:400rpx;
  height:200rpx;
  float:left;
}
.ticket_main_right{
  width:300rpx;
  height:200rpx;
  float:left;
  position: relative;
}
.ticket_main_header{
  font-size:42rpx;
  margin-left:50rpx;
  margin-top:30rpx;
  border-bottom: dotted 1rpx #22003e;
  color:#340c55;
  font-weight:600;
}
.ticket_main_p{
  font-size:26rpx;
  margin-left:50rpx;
  margin-top:20rpx;
  border-bottom: dotted 1rpx #22003e;
}
.ticket_pic{
  border: 4rpx solid #22003e;
  width:200rpx;
  height:140rpx;
  position:absolute;
  left:50rpx;
  top:30rpx;
  font-size:66rpx;
  text-align: center;
  line-height:140rpx;
  font-weight: 700;
  color:#340c55;
}
.banner_title{
  width:100%;
  height:100%;
  line-height:100rpx;
  text-align: center;
  font-size:40rpx;
  color:#f0f0f0;

}
.sub_info{
  margin-left:40rpx;
  margin-top:14rpx;
  color:#5a5a5a;
}

.info_list{
  width:600rpx;
  height:80rpx;
  margin-left:50rpx;
  font-weight:500;
}
.info_block{
  width:149rpx;
  height:60rpx;
  border-right: 1rpx solid #dadada;
  line-height:60rpx;
  font-size:26rpx;
  text-align: center;
  float:left;
  margin-top:10rpx;
}
.info_footer{
  width:600rpx;
  height:80rpx;
  margin-left:50rpx;
  line-height:60rpx;
  font-size:26rpx;
}
.footer_block{
  width:249rpx;
  height:60rpx;
  line-height:60rpx;
  font-size:26rpx;
  text-align: center;
  float:left;
  margin-top:10rpx;
}